.container{
  height: 100%;
  overflow: hidden;
}

/*顶部栏*/
.my-header{
  padding: 40rpx 0;
  background-image: url('https://img.alicdn.com/imgextra/i4/3021408719/TB2dC_ScHXlpuFjSszfXXcSGXXa_!!3021408719.png');
  background-size: cover;
  box-sizing: border-box;
  padding-top: 25rpx;
  padding-bottom: 50rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  padding: 25rpx 0;
  width: 270rpx;
  height: 42rpx;
}

/*tab切换选项*/
.list-tab{
  height: 80rpx;
  box-sizing: border-box;
}
.list-tab ul{
  display: flex;
  height: 80rpx;
  box-sizing:border-box;
  background-color: #f2eaed;
}
.list-tab li{
  flex: 1;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
  color: #000;
}
.list-tab .active{
  color: #ff1373;
  border-bottom: 4px solid #ff1373;
}

/*list-box*/
.list-view {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 15rpx 425rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}
.list-box {
    width: 350rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}

.list-cover, .list-cover-img {
    width: 350rpx;
    height: 350rpx;
}

.list-cover {
    position: relative;
    overflow: hidden;
}

.list-title {
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 18rpx;
    color: #ff1373;
    background-color:#d6b1b7;
    opacity:0.5;
}
.list-title .prices{
    font-size: 24rpx;
}




.swiper-box{
  height: 100%;
  background-image: url('https://img.alicdn.com/imgextra/i4/3021408719/TB2km_ScHXlpuFjSszfXXcSGXXa_!!3021408719.png');
  background-size: cover;
}
.scroll-box{
  height: 100%;
}